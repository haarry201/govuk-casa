{% extends "layouts/journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
  {{ t('commute-car-fuel:pageTitle') }}
{% endblock %}


{% block journey_form %}
    <h1 class="govuk-heading-l">
    {{ t('commute-car-fuel:h1') }}
    </h1>

  {{ casaGovukRadios({
    name: 'commuteCarFuel',
    casaValue: formData.commuteCarFuel,
    casaErrors: formErrors,
    fieldset: {
        legend: {
        text: 'What type of fuel does your car use?',
        isPageHeading: true,
        classes: 'govuk-fieldset__legend--m'
        }
    },
    items: [
      {
        value: 'petrol',
        text: 'Petrol'
      },
      {
        value: 'diesel',
        text: 'Diesel'
      },
      {
        value: 'electric',
        text: 'Electricity'
      },
      {
        value: 'hybrid',
        text: 'Hybrid'
      },
      {
        value: 'plugInHybrid',
        text: 'Plug in hybrid electric vehicle (PHEV)'
      }
    ]
  }) }}


{% endblock %}
