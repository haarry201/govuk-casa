{% extends "layouts/journey.njk" %}

{% from "casa/components/input/macro.njk" import casaGovukInput with context %}

{% block casaPageTitle %}
  {{ t('btravel-distance:pageTitle') }}
{% endblock %}


{% block journey_form %}
    <h1 class="govuk-heading-l">
    {{ t('btravel-distance:h1') }}
    </h1>

  {{ casaGovukInput({
    name: 'bTravelDistance',
    casaValue: formData.bTravelDistance,
    label: {
      text: "How far do you travel in miles?",
      classes: 'govuk-label--m'
    },
    hint: {
        text: "One way, on an average journey. Must be a whole number"
    },
    classes: 'govuk-!-width-one-half',
    casaErrors: formErrors
  }) }}

{% endblock %}
